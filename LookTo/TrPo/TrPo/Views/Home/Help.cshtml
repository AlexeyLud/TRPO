@model TrPo.Models.HelpModel

@{ 
    if (User.Identity.IsAuthenticated)
    {
        TempData["useremail"] = User.FindFirst(x => x.Type == "email").Value;
    }
    else
    {
        TempData["useremail"] = "";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/auth_reg_help.css">
    <link rel="stylesheet" href="/css/submit.css">
    <title>Помощь</title>
</head>
<body>
    <form asp-action="Index" asp-controller="Home">
        <input class="btn_logo_other" type="image" src="/pictures/logo_small_new.png" alt="LookTo">
    </form>
    <div class="auth_reg_help">
        <h1 align="center">Помощь</h1>
        <p>Есть вопрос - спроси!</p>
        <form asp-action="HelpIndex" asp-controller="Home" asp-antiforgery="true">
            Ваш Email: <br><input type="email" asp-for="Email"  id="email" placeholder="Ваш Email" value="@TempData["useremail"]" required> <br>
            Ваш вопрос: <br><input type="hidden" name="OurEmail" id="our_email" value="LookToHelper@gmail.com">
            <textarea asp-for="Question" id="question" cols="62" rows="15" placeholder="Ваш вопрос" required></textarea>
            <input type="submit" name="submit" id="submit" class="submit" value="Задать вопрос">
        </form>
    </div>
</body>
</html>